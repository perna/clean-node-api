{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "module": "esnext",
    "target": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "explainFiles": true,
    "skipLibCheck": true,
    "paths": {
      "@tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]	
}
